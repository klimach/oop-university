<Window x:Class="Lab9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lab 9 - Клімач О.П. - 101-пТК" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="x₀:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtX0" Width="50" Margin="5" Text="0"/>
            <TextBlock Text="y₀:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtY0" Width="50" Margin="5" Text="0"/>
            <TextBlock Text="R:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtR" Width="50" Margin="5" Text="5"/>
            <TextBlock Text="Масштаб:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtScale" Width="50" Margin="5" Text="20"/>
            <Button Content="Побудувати" Click="BtnDraw_Click" Margin="10,0"/>
        </StackPanel>

        <Image x:Name="imagePlot" Grid.Row="1" Margin="10" Stretch="None" HorizontalAlignment="Center"/>
    </Grid>
</Window>
